<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- DBConnectionManager Bean Definition -->
    <bean id="dbConnectionManager" class="com.todo.todo_test.db.DBConnectionManager">
        <property name="url" value="jdbc:mysql://localhost:3306/BookstoreDB"/>
        <property name="username" value="root"/>
        <property name="password" value="new_password"/>
    </bean>

    <!-- BookRegistrationServlet Bean Definition -->
    <bean id="bookRegistrationServlet" class="com.todo.todo_test.servlets.BookRegistrationServlet">
        <constructor-arg ref="dbConnectionManager"/> <!-- Constructor-based DI -->
    </bean>

</beans>